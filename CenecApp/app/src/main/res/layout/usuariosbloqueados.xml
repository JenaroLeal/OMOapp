<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/verPerfilUsuarioBloqueado"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="15dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgUsuarioBloqueado">
    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombreUsuarioBloqueado"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:hint="nombreusuario">
    </TextView>
    <ImageButton
        android:id="@+id/ajustesUsuarioBloqueado"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ajustes"
        android:layout_gravity="end|center_vertical">

    </ImageButton>

</LinearLayout>