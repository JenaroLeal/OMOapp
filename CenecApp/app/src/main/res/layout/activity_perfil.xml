<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradiente3"
    tools:context=".Perfil_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:background="@drawable/ajustes">

                </ImageButton>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/spidermanpng">

                    </de.hdodenhof.circleimageview.CircleImageView>

                </LinearLayout>

                <TextView
                    android:id="@+id/nombreGamer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Nombre"
                    android:textSize="30sp"
                    android:layout_marginBottom="20dp">

                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:weightSum="3">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        app:cardCornerRadius="15dp">
                        <TextView
                            android:id="@+id/juego1Gamer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Juego 1"
                            android:layout_gravity="center"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        app:cardCornerRadius="15dp">
                        <TextView
                            android:id="@+id/juego2Gamer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Juego 2"
                            android:layout_gravity="center"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        app:cardCornerRadius="15dp">
                        <TextView
                            android:id="@+id/juego3Gamer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Juego 3"
                            android:layout_gravity="center"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        app:cardCornerRadius="15dp">
                        <TextView
                            android:id="@+id/juego4Gamer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Juego 4"
                            android:layout_gravity="center"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        app:cardCornerRadius="15dp">
                        <TextView
                            android:id="@+id/juego5Gamer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Juego 5"
                            android:layout_gravity="center"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="15dp"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/plataformaGamer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="plataforma"
                        android:textSize="20sp"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sobre mi:"
                    android:layout_margin="10dp">

                </TextView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/miBiografia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="mi bio"
                        android:padding="2dp">

                    </TextView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white">

    </View>
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gradientbotones">
        <ImageView
            android:id="@+id/chatPerfil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:src="@drawable/chat">

        </ImageView>

        <ImageView
            android:id="@+id/Perfil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            android:layout_gravity="center">

        </ImageView>
        <ImageView
            android:id="@+id/redSocialPerfil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/social"
            android:layout_gravity="end">
        </ImageView>

    </androidx.appcompat.widget.Toolbar>



</LinearLayout>