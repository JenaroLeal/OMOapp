<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondoPantalla"
    android:padding="20dp"
    tools:context=".AjustesPassword">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar contraseña"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="@color/gris_roto">
    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="10dp"
        android:background="@color/gris_roto"></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:text="Introduce tu contraseña actual"
        android:textColor="@color/gris_roto"
        android:textSize="20sp">
    </TextView>
    <EditText
        android:id="@+id/passwordActual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:hint="Contraseña actual"
        android:textColorHint="@color/gris"
        android:textColor="@color/white"
        android:textSize="15sp">
    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:text="Introduce tu nueva contraseña"
        android:textSize="20sp"
        android:textColor="@color/gris_roto">
    </TextView>
    <EditText
        android:id="@+id/nuevaPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:inputType="textPassword"
        android:hint="Nueva contraseña"
        android:textColorHint="@color/gris"
        android:textColor="@color/white"
        android:textSize="15sp">
    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:text="Confirma tu nueva contraseña"
        android:textSize="20sp"
        android:textColor="@color/gris_roto">
    </TextView>
    <EditText
        android:id="@+id/confirmarPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:hint="Confirmar contraseña"
        android:textColorHint="@color/gris"
        android:textColor="@color/white"
        android:textSize="15sp">
    </EditText>
    <Button
        android:id="@+id/guardarCambiosPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/gris_roto"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="Guardar cambios"
        android:layout_gravity="center">
    </Button>

</LinearLayout>