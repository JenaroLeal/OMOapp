<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondoPantalla"
    tools:context="Fragments.perfil">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:layout_margin="15dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imagenPerfil"
                        android:layout_width="180dp"
                        android:layout_height="match_parent">
                    </de.hdodenhof.circleimageview.CircleImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnIraNotificaciones"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/vectorsinnotificacion"></ImageButton>

                        <ImageButton
                            android:id="@+id/btnIraAjustes"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/vectorajustes"></ImageButton>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/nombreGamer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorTextos"
                    android:hint="Nombre"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/miBiografia"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextos"
                    android:padding="15dp"
                    android:layout_margin="15dp"
                    android:hint="mi biografia"></TextView>

                <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:backgroundTint="@color/fondoTarjeta"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="15dp"
                    android:padding="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="PLATAFORMA"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                            android:layout_weight="2"></TextView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/fondoTarjeta"
                            android:padding="15dp"
                            android:layout_margin="15dp"
                            app:cardCornerRadius="15dp"
                            android:outlineSpotShadowColor="@color/verdeRecluciente">
                            <TextView
                                android:id="@+id/plataformaGamer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="15dp"
                                android:textColor="@color/colorTextos"
                                android:hint="plataforma"
                                android:textSize="20sp"
                                android:layout_gravity="center"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:padding="15dp"
                    app:cardCornerRadius="15dp"
                    android:backgroundTint="@color/fondoTarjeta">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:text="JUEGOS">
                        </TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:layout_margin="5dp"
                            android:weightSum="3">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/fondoTarjeta"
                                android:layout_weight="1"
                                android:layout_margin="2dp"
                                android:outlineSpotShadowColor="@color/verdeRecluciente"
                                app:cardCornerRadius="15dp">
                                <TextView
                                    android:id="@+id/juego1Gamer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="Juego 1"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center"/>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/fondoTarjeta"
                                android:outlineSpotShadowColor="@color/verdeRecluciente"
                                android:layout_weight="1"
                                android:layout_margin="2dp"
                                app:cardCornerRadius="15dp">
                                <TextView
                                    android:id="@+id/juego2Gamer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:hint="Juego 2"
                                    android:layout_gravity="center"/>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/fondoTarjeta"
                                android:outlineSpotShadowColor="@color/verdeRecluciente"
                                android:layout_weight="1"
                                android:layout_margin="2dp"
                                app:cardCornerRadius="15dp">
                                <TextView
                                    android:id="@+id/juego3Gamer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:hint="Juego 3"
                                    android:layout_gravity="center"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:layout_margin="5dp"
                            android:weightSum="3"
                            android:gravity="center">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/fondoTarjeta"
                                android:outlineSpotShadowColor="@color/verdeRecluciente"
                                android:layout_weight="1"
                                android:layout_margin="2dp"
                                app:cardCornerRadius="15dp">
                                <TextView
                                    android:id="@+id/juego4Gamer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:hint="Juego 4"
                                    android:layout_gravity="center"/>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/fondoTarjeta"
                                android:outlineSpotShadowColor="@color/verdeRecluciente"
                                android:layout_weight="1"
                                android:layout_margin="2dp"
                                app:cardCornerRadius="15dp">
                                <TextView
                                    android:id="@+id/juego5Gamer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:hint="Juego 5"
                                    android:layout_gravity="center"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="15dp"
                    android:layout_gravity="center">

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>