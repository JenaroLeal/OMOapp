<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondoPantalla"
    tools:context=".AAblanco">
   <LinearLayout

       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:padding="10dp">
       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/imgFotoChat"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:layout_margin="5dp">
       </de.hdodenhof.circleimageview.CircleImageView>
       <TextView
           android:id="@+id/nombreAmigoChatActual"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/white"
           android:layout_margin="10dp">
       </TextView>
   </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"
        android:layout_margin="10dp"
        android:background="@color/gris_roto"></View>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="1"
        android:id="@+id/recyclerChats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_weight="1"
            android:id="@+id/textoMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/edittext"
            android:textColor="@color/white">
        </EditText>
        <ImageView
            android:id="@+id/btnEnviarMensaje"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/play"></ImageView>
    </LinearLayout>


</LinearLayout>