<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:layout_gravity="center"
    app:cardCornerRadius="15dp">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/contenedorUsuarioChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:background="@color/fondoTarjeta"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgPerfilJugador"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginBottom="10dp">
        </ImageView>
        <TextView
            android:id="@+id/nombreJugadorLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorTextos"
            android:hint="nombre usuario">
        </TextView>
        <TextView
            android:id="@+id/afinidadConJugador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="%%"
            android:textSize="30sp"
            android:textColor="@color/colorTextos">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/spidermanpng">
            </ImageView>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/spidermanpng">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/amigosJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorTextos"
                android:textAlignment="center"
                android:hint="1234">
            </TextView>
            <TextView
                android:id="@+id/amigosEnComunJugador"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextos"
                android:textAlignment="center"
                android:hint="1235">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnDescartarAJugador"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/vectordelete">
            </ImageButton>
            <ImageButton
                android:id="@+id/btnConectarAJugador"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/vectormandook">
            </ImageButton>
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>
