<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondoPantalla"
    tools:context=".VentajasPremium">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ventajas premium"
        android:textColor="@color/verdeRecluciente"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:textSize="20sp"></TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_margin="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:layout_margin="5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Añade hasta 3 nuevos juegos"
                    android:textSize="20sp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Al añadir 3 juegos nuevos aumentas la afinidad con los jugadores, lo que te permite encontrar tu equipo ideal.">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Sin anuncios">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="En la versión premium, los anuncios desaparecen. Disfruta tu experiencia en O-MO sin perder detalle">
                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Button
        android:id="@+id/elegirPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elegir plan Premium"
        android:layout_gravity="center">
    </Button>

</LinearLayout>